<Window x:Class="WpfApp1.DockPanel"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="DockPanel" Height="450" Width="800">
    <Grid>
        <DockPanel>
            <Button Content="Button 1" DockPanel.Dock="Top"></Button>
            <Button  Content="Button 2" DockPanel.Dock="Left"></Button>
            <Button  Content="Button 3" DockPanel.Dock="Right"></Button>
            <Button  Content="Button 4" DockPanel.Dock="Bottom"></Button>
            <TextBlock Text="Main Content"></TextBlock>
        </DockPanel>
    </Grid>
</Window>
